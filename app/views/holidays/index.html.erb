<p id="notice"><%= notice %></p>

<h1>Holidays</h1>

<table>
  <thead>
    <tr>
      <th>Created By</th>
      <th>Value</th>
      <th>Price</th>
      <th>Guest</th>
      <th>Title</th>
      <th>Check In Date</th>
      <th>Cehck Out Date</th>
      <th>Description</th>
      <th>Category</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holidays.each do |holiday| %>
      <% if holiday.listing == nil %>
      <tr>
        <td><%= "#{holiday.user.name} (#{holiday.user.email})" %></td>
        <td><%= "$#{holiday.value}" %></td>
        <td><%= "$#{holiday.price}" %></td>
        <td><%= holiday.guest %></td>
        <td><%= link_to holiday.title, holiday %></td>
        <td><%= holiday.check_in %></td>
        <td><%= holiday.check_out %></td>
        <td><%= holiday.description %></td>
        <td><%= holiday.category.label %></td>
        <%# <% if holiday.photos.attached? %>
            <%# <!-- <td><%= image_tag holiday.photos.first, size: "100x70" %>
        <%# <% end %>
        <td><%= link_to 'Show', holiday %> | <%= link_to 'Edit', edit_holiday_path(holiday) %> | <%= link_to 'Destroy', holiday, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
        <td><%= button_to "Book", holiday_listings_path(holiday) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @holidays %> <br>

