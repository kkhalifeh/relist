<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Created By</th>
      <th>Value</th>
      <th>Price</th>
      <th>Guest</th>
      <th>Title</th>
      <th>Check In Date</th>
      <th>Cehck Out Date</th>
      <th>Description</th>
      <th>Category</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <% if listing.sale == nil %>
      <tr>
        <td><%= "#{listing.user.name} (#{listing.user.email})" %></td>
        <td><%= "$#{listing.value}" %></td>
        <td><%= "$#{listing.price}" %></td>
        <td><%= listing.guest %></td>
        <td><%= link_to listing.title, listing %></td>
        <td><%= listing.check_in %></td>
        <td><%= listing.check_out %></td>
        <td><%= listing.description %></td>
        <%# <% if listing.photos.attached? %>
            <%# <!-- <td><%= image_tag listing.photos.first, size: "100x70" %>
        <%# <% end %>
        <td><%= link_to 'Show', listing %> | <%= link_to 'Edit', edit_listing_path(listing) %> | <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
        <td><%= button_to "Book", listing_sales_path(listing) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @listings %> <br>

<%= link_to 'New Listing', new_listing_path %>
