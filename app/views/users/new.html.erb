<body class="signup-background">
<div class="signup-box">
  <h1>Create account</h1>
  <font color="red"<p><%= flash[:notice] %></p></font>
  <% flash[:notice] = "" %>
  <%= bootstrap_form_for @user do |f| %>
    <%= f.text_field :name %>
    <%= f.email_field :email %>
    <%= f.password_field :password %>
    <%= f.file_field :profile_photo %>
    <%= f.form_group do %>
      <%= f.submit %>
    <% end %>
  <% end %>
</div>
</body>
