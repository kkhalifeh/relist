<h1>Update profile</h1>

<h4><%= flash[:notice] %></h4>

<% if @user.errors %>
    <% @user.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :name %>
<%= f.text_field :name %> <br>
<%= f.label :email %>
<%= f.text_field :email %> <br>
<%= f.label :password %>
<%= f.password_field :password %>

<%= f.submit 'Update profile' %>
<% end %>
